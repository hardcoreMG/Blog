---
import { getCollection, render } from "astro:content";
import readingTime from "reading-time";
import BaseLayout from "../../layouts/BaseLayout.astro";

export async function getStaticPaths() {
  const posts = await getCollection("posts");
  return posts.map((p) => ({
    params: { slug: p.data.slug },
    props: { post: p },
  }));
}

const { post } = Astro.props;
const { title, slug, description, publishDate } = post.data;
const readingTimeResult = readingTime(post.body ?? "");
const permalink = `${Astro.site?.href ?? ""}blog/${slug}`;
const { Content } = await render(post);
---

<BaseLayout title={title} description={description} permalink={permalink}>
  <header class="text-center">
    <h1 class="mb-[0.7em]">{title}</h1>
    <p
      class="uppercase font-sans font-semibold text-secondary flex flex-col md:flex-row gap-4 items-center justify-center"
    >
      <span class="bg-muted px-2 py-1 rounded-md"
        >{publishDate.toLocaleDateString()}</span
      >
      {readingTimeResult.words} 字 ~ 约 {readingTimeResult.minutes.toFixed(1)} 分钟
    </p>
    <hr class="min-w-25 w-2/3 md:w-2/5" />
  </header>
  <div class="container">
    <article class="content">
      <Content />
    </article>
  </div>
</BaseLayout>
